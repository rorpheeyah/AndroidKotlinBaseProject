<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="font_style_normal" parent="regular_text_form">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="regular_text_form">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/atlantic</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <declare-styleable name="ProgressButton">
        <attr name="android:text" format="string" />
        <attr name="android:hint" format="string"/>
    </declare-styleable>

    <declare-styleable name="ProgressButton_text">
        <attr name="android:text" format="string" />
    </declare-styleable>
</resources>